{
  "plugin": "custom",
  "pluginConfig": {
    "invoke_interval": "60s",
    "timeout": "30s",
    "max_output_length": 80,
    "concurrency": 1
  },
  "source": "nvlink-status-check",
  "conditions": [
    {
      "type": "NVLinkProblem",
      "reason": "NVLinkError",
      "message": "NVLink hardware error detected"
    }
  ],
  "rules": [
    {
      "type": "permanent",
      "condition": "NVLinkProblem",
      "reason": "NVLinkError",
      "path": "/etc/node-problem-detector.d/plugin/check_nvlink_status.sh"
    }
  ]
}
