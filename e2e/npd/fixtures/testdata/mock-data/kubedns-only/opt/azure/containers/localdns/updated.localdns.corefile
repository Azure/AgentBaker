# Only KubeDNS section - no VNet DNS bind
.:53 {
    errors
    bind 169.254.10.11
    forward . 10.0.0.10 {
        policy sequential
    }
    cache 3600
    loop
    nsid localdns-pod
}
cluster.local:53 {
    errors
    bind 169.254.10.11
    forward . 10.0.0.10 {
        force_tcp
        policy sequential
    }
    cache 3600
    loop
    nsid localdns-pod
}
