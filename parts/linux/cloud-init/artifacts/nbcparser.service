[Unit]
Description=Parse contract and run csecmd

[Service]
Type=oneshot
ExecStartPre=/bin/bash -c 'if [ ! -f /opt/azure/containers/nbc.json ]; then exit 1; fi'
ExecStart=/bin/bash -c '/opt/azure/containers/nbcparser /opt/azure/containers/nbc.json > cse_cmd.sh; \
  chmod +x cse_cmd.sh; \
  ./cse_cmd.sh'

[Install]
WantedBy=multi-user.target