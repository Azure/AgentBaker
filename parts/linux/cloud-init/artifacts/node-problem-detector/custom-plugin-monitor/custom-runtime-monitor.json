{
  "plugin": "custom",
  "pluginConfig": {
    "invoke_interval": "30s",
    "timeout": "3m",
    "max_output_length": 80,
    "concurrency": 1,
    "enable_message_change_based_condition_update": false
  },
  "source": "container-runtime-custom-plugin-monitor",
  "metricsReporting": true,
  "conditions": [
    {
      "type": "ContainerRuntimeProblem",
      "reason": "ContainerRuntimeIsUp",
      "message": "container runtime service is up"
    }
  ],
  "rules": [
    {
      "type": "temporary",
      "reason": "ContainerRuntimeIsDown",
      "path": "/etc/node-problem-detector.d/plugin/check_runtime.sh",
      "timeout": "3m"
    },
    {
      "type": "permanent",
      "condition": "ContainerRuntimeProblem",
      "reason": "ContainerRuntimeIsDown",
      "path": "/etc/node-problem-detector.d/plugin/check_runtime.sh",
      "timeout": "3m"
    }
  ]
}
