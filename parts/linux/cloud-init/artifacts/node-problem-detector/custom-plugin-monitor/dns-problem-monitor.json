{
    "plugin": "custom",
    "pluginConfig": {
      "invoke_interval": "5m",
      "timeout": "30s",
      "max_output_length": 80,
      "concurrency": 1
    },
    "source": "dns-problem-monitor",
    "metricsReporting": true,
    "conditions": [],
    "rules": [
      {
        "type": "temporary",
        "reason": "DNSProblem",
        "path": "/etc/node-problem-detector.d/plugin/remediate_dns.sh",
        "timeout": "30s"
      },
      {
        "type": "temporary",
        "reason": "LocalDNSError",
        "path": "/etc/node-problem-detector.d/plugin/check_dns_to_localdns.sh",
        "timeout": "30s"
      },
      {
        "type": "temporary",
        "reason": "VnetDNSUnreachable",
        "path": "/etc/node-problem-detector.d/plugin/check_dns_to_vnetdns.sh",
        "timeout": "30s"
      },
      {
        "type": "temporary",
        "reason": "CoreDNSUnreachable",
        "path": "/etc/node-problem-detector.d/plugin/check_dns_to_coredns.sh",
        "timeout": "30s"
      }
    ]
}
