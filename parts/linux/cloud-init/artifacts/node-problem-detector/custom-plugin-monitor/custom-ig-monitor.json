{
  "plugin": "custom",
  "pluginConfig": {
    "invoke_interval": "10m",
    "timeout": "120s",
    "max_output_length": 1000,
    "concurrency": 1,
    "enable_message_change_based_condition_update": false
  },
  "source": "node-ig-monitor",
  "metricsReporting": false,
  "conditions": [],
  "rules": [
    {
      "type": "temporary",
      "reason": "CPUPressureIGDiagnostics",
      "path": "/etc/node-problem-detector.d/plugin/check_cpu_pressure_ig.sh",
      "timeout": "30s"
    },
    {
      "type": "temporary",
      "reason": "MemoryPressureIGDiagnostics",
      "path": "/etc/node-problem-detector.d/plugin/check_memory_pressure_ig.sh",
      "timeout": "30s"
    }
  ]
}
