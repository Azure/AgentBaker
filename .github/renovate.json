{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [":rebaseStalePrs"],
  "enabledManagers": ["custom.regex"],
  "branchConcurrentLimit": 50,
  "prConcurrentLimit": 50,
  "prHourlyLimit": 0,
  "packageRules": [
    {
      "matchUpdateTypes": [
        "minor",
        "patch",
        "pin",
        "digest"
      ],
      "automerge": false
    },
    {
      "matchDatasources": ["docker"],
      "matchPackageNames": ["oss/azure/secrets-store/provider-azure"],
      "assignees": ["zachary-bailey"],
      "reviewers": ["zachary-bailey"],
      "ignoreReviewers": ["juan-lee", "cameronmeissner", "UtheMan", "ganeshkumarashok", "anujmaheshwari1", "AlisonB319", "Devinwong", "lilypan26", "ShiqianTao", "AbelHu", "junjiezhang1997", "jason1028kr", "djsly"]
    }
  ],
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": [
        "parts/linux/cloud-init/artifacts/components.json"
      ],
      "matchStringsStrategy": "any",
      "matchStrings": [
        ".*?\"downloadURL\":\\s*\"(?<registryUrl>[^/]+)/(?<packageName>[^:]+)[\\s\\S]*?\"multiArchVersions\": \\[\\s*\"(?<currentValue>[^\\\"]+)\".*"
      ],
      "datasourceTemplate": "docker",
      "registryUrlTemplate": "https://mcr.microsoft.com"
    }
  ]
}
