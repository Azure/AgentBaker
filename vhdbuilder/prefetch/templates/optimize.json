{
    "type": "Microsoft.VirtualMachineImages",
    "apiVersion": "2024-02-01",
    "location": "<LOCATION>",
    "identity": {
        "type": "UserAssigned",
        "userAssignedIdentities": {
            "<IMAGE_BUILDER_IDENTITY_ID>": {}
        }
    },
    "properties": {
        "source": {
            "type": "SharedImageVersion",
            "imageVersionId": "<CAPTURED_SIG_VERSION_ID>"
        },
        "customize": [
            {
                "type": "Shell",
                "name": "RunVHDCleanup",
                "inline": ["sudo /bin/bash -eux /opt/azure/containers/cleanup-vhd.sh && sudo rm -f /opt/azure/containers/cleanup-vhd.sh"]
            }
        ],
        "optimize": {
            "vmboot": {
                "state": "Enabled"
            }
        },
        "distribute": [
            {
                "type": "VHD",
                "uri": "<OPTIMIZED_VHD_URI>",
                "runOutputName": "VHD"
            }
        ]
    }
}
